<h1>list user</h1>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>STT</th>
      <th>Tên</th>
      <th>Tài khoản</th>
      <th>Giới tính</th>
      <th>Email</th>
      <th>Địa chỉ</th>
      <th>Quyền</th>
      <th colspan="3">Cấu hình</th>
    </tr>
  </thead>

  <tbody>
    <% users.map((user, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= user.fullname %></td>
      <td><%= user.username %></td>
      <td><%= user.sex == '1' ? 'nam' : 'nu' %></td>
      <td><%= user.email %></td>
      <td><%= user.address %></td>
      <td><%= user.groupid == 1 ? 'admin' : 'user' %></td>
      <td class="d-flex gap-2">
        <a href="/detail-user/<%= user.username %>">
          <i class="fa fa-eye"></i>
        </a>
        <form action="/edit-user" method="POST">
          <input type="hidden" name="username" value="<%= user.username %>" />
          <button type="submit" class="btn btn-success">
            <i class="fa fa-edit"></i>
          </button>
        </form>
        <form action="/del-user" method="POST">
          <input type="hidden" name="username" value="<%= user.username %>" />
          <button type="submit" class="btn btn-danger">
            <i class="fa fa-trash"></i>
          </button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
