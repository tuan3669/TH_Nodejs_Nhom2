<h2>Detail User</h2>
<div class="container">
  <h1>Thông tin chi tiết người dùng</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Fullname</th>
        <th>Address</th>
        <th>Sex</th>
        <th>Email</th>
        <th>Group</th>
      </tr>
    </thead>
    <tbody>
      <% if(user) { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.fullname %></td>
        <td><%= user.address %></td>
        <td><%= user.sex == '1' ? 'nam' : 'nu' %></td>
        <td><%= user.email %></td>
        <td><%= user.groupid == 1 ? 'admin' : 'user' %></td>
      </tr>
      <% } else { %>

      <td>ko co user</td>
      <% } %>
    </tbody>
  </table>
</div>
